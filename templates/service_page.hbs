<div class="container-divider"></div>

<div class="container svc-container">
  <div class="sub-nav svc-subnav">
    {{breadcrumbs}}
  </div>

  <div id="main-content">
    <div class="svc-shell">

      <!-- TOP BAR --------------------------------------------------------->
      <div class="svc-topbar">
        <div class="svc-topbar-inner">
          <div class="svc-topbar-left">
            <div class="svc-topbar-logo">
              <img
                src="{{asset 'ARPAHLOGO2.png'}}"
                alt="ARPA-H logo"
              />
            </div>
            <div class="svc-topbar-text">
              <p class="svc-kicker">ARPA-H ITDI • Service Request</p>
              <h1 class="svc-title">
                Tell us what you need, we’ll take it from here.
              </h1>
            </div>
          </div>

          <ol class="svc-steps" aria-label="How this request works">
            <li class="svc-step svc-step-active">
              <span class="svc-step-number">1</span>
              <span class="svc-step-label">Describe your request</span>
            </li>
            <li class="svc-step">
              <span class="svc-step-number">2</span>
              <span class="svc-step-label">Review details</span>
            </li>
            <li class="svc-step">
              <span class="svc-step-number">3</span>
              <span class="svc-step-label">Submit to ITDI</span>
            </li>
          </ol>
        </div>
      </div>

      <!-- MAIN FORM PANEL ------------------------------------------------->
      <div class="svc-form-panel" aria-label="Service request form">
        <div id="service-catalog-item"></div>
      </div>

      <!-- HELPER CARDS ROW (BOTTOM) --------------------------------------->
      <div class="svc-helper-row" aria-label="Helpful information">
        <section class="svc-card">
          <h2 class="svc-card-title">Helpful details to include</h2>
          <ul class="svc-card-list">
            <li>What you’re trying to do or fix in plain language.</li>
            <li>Where this applies (system, URL, device, location, or team).</li>
            <li>Any timing or context that might change how we handle it.</li>
          </ul>
        </section>

        <section class="svc-card">
          <h2 class="svc-card-title">What happens after you submit?</h2>
          <ul class="svc-card-list">
            <li>You’ll receive an email confirmation with your request or ticket number.</li>
            <li>You can reply to that email at any time to add updates or attachments.</li>
            <li>You can track progress in the Service Hub by clicking on your name and then clicking on <strong>Requests</strong>.</li>
          </ul>
        </section>

        <section class="svc-card svc-card-soft">
          <h2 class="svc-card-title">Need help with the form?</h2>
          <ul class="svc-card-list">
            <li>If you’re not sure which option fits, pick the closest one and explain in the description field.</li>
            <li>Use clear language instead of acronyms whenever possible.</li>
            <li>For urgent issues, keep using your provided escalation channels (IT@arpa-h.gov, phone or messaging) in addition to submitting this request.</li>
          </ul>
        </section>
      </div>

    </div>
  </div>
</div>

<!-- Exit overlay (for dissolve-to-white on navigate) -->
<div id="svc-exit-overlay" aria-hidden="true"></div>

<style>
/* =============================== GLOBAL BACKGROUND ======================= */
body {
  background: radial-gradient(circle at top left, #f6f7fb 0, #eef0f7 40%, #e5e7f2 100%);
}

/* Remove default divider */
.container-divider {
  border-top: none;
  height: 24px;
}

/* =============================== TOP BAR ================================ */
.svc-container {
  max-width: 1180px;
}

.svc-subnav {
  margin-bottom: 12px;
}

.svc-shell {
  background: #ffffff;
  border-radius: 24px;
  box-shadow:
    0 18px 50px rgba(15, 33, 80, 0.18),
    0 0 0 1px rgba(16, 30, 67, 0.03);
  padding: 24px 26px 28px;
  margin-bottom: 40px;
}

/* Blue header band */
.svc-topbar {
  background: linear-gradient(145deg, #002a6e, #004a9f);
  border-radius: 18px;
  padding: 14px 22px;
  margin-bottom: 22px;
  color: #ffffff;
  box-shadow: 0 16px 40px rgba(0, 35, 102, 0.45);
}

.svc-topbar-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
}

.svc-topbar-left {
  display: flex;
  align-items: center;
  gap: 14px;
}

/* ARPA-H logo */
.svc-topbar-logo {
  height: 40px;
  width: 120px;
  display: flex;
  align-items: center;
}

.svc-topbar-logo img {
  max-height: 32px;
  width: auto;
}

.svc-kicker {
  margin: 0 0 2px;
  font-size: 11px;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  opacity: 0.78;
}

.svc-title {
  margin: 0;
  font-size: 20px;
  font-weight: 600;
}

/* Steps */
.svc-steps {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  gap: 8px;
}

.svc-step {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 5px 9px;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.14);
  font-size: 11px;
  white-space: nowrap;
}

.svc-step-number {
  height: 18px;
  width: 18px;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.18);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  font-weight: 600;
}

.svc-step-active {
  background: #f1f5ff;
  color: #003399;
}

.svc-step-active .svc-step-number {
  background: #003399;
  color: #ffffff;
}

.svc-step-label {
  font-weight: 500;
}

/* =============================== MAIN SHELL ============================ */
.svc-form-panel {
  background: #ffffff;
  border-radius: 18px;
  padding: 24px 24px 20px;
  box-shadow:
    0 10px 30px rgba(15, 33, 80, 0.10),
    0 0 0 1px rgba(17, 24, 39, 0.03);
}

/* Make the Service Catalog form use the full width */
.svc-form-panel #service-catalog-item {
  width: 100%;
}

/* Stretch inputs / selects / textareas horizontally */
.svc-form-panel input[type],
.svc-form-panel select,
.svc-form-panel textarea {
  width: 100% !important;
  max-width: 100% !important;
  box-sizing: border-box;
}

/* Let inner field containers grow full width too */
.svc-form-panel div[role="group"],
.svc-form-panel .form-field,
.svc-form-panel .field,
.svc-form-panel .sc-bdfBwQ {
  max-width: 100%;
}

/* ====================== SUBMIT BUTTON + WRAPPER ======================== */
/* Kill the gray card around the submit button & align it with the form */
.svc-form-panel div:has(> button[type="submit"]) {
  background: transparent !important;
  border: none !important;
  box-shadow: none !important;
  padding: 0 !important;
  margin-top: 24px;
  display: flex;
  justify-content: flex-end;
}

/* 3D primary submit button – now same dark blue family as nav buttons */
.svc-form-panel button[type="submit"],
.svc-form-panel .svc-submit button {
  background: linear-gradient(180deg, #00205b, #00397e) !important;
  color: #ffffff !important;
  padding: 14px 32px !important;
  border-radius: 999px !important;
  font-size: 16px !important;
  font-weight: 600 !important;
  border: none !important;
  cursor: pointer !important;
  transition: transform 0.2s ease, box-shadow 0.2s ease, filter 0.2s ease !important;
  box-shadow:
    0 18px 35px rgba(0, 32, 91, 0.45),
    0 0 0 1px rgba(255, 255, 255, 0.14) !important;
}

.svc-form-panel button[type="submit"]:hover,
.svc-form-panel .svc-submit button:hover {
  transform: translateY(-3px);
  box-shadow: 0 24px 40px rgba(0, 32, 91, 0.55) !important;
  filter: brightness(1.05);
}

.svc-form-panel button[type="submit"]:active,
.svc-form-panel .svc-submit button:active {
  transform: translateY(-1px);
  box-shadow: 0 12px 24px rgba(0, 32, 91, 0.4) !important;
  filter: brightness(0.96);
}

/* =============================== HELPER CARDS (BOTTOM) ================= */
/* ARPA-Hified info cards – unified soft blue gradient + accent bar */
.svc-helper-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  margin-top: 24px;
}

.svc-card {
  position: relative;
  flex: 1 1 0;
  min-width: 220px;
  border-radius: 18px;
  background: linear-gradient(135deg, #f3f7ff, #e5f0ff);
  box-shadow:
    0 10px 28px rgba(15, 33, 80, 0.06),
    0 0 0 1px rgba(0, 64, 128, 0.06);
  padding: 18px 20px 16px;
  overflow: hidden;
}

.svc-card::before {
  content: "";
  display: block;
  width: 42px;
  height: 3px;
  border-radius: 999px;
  background: linear-gradient(90deg, #00b5e2, #0072ce);
  margin-bottom: 10px;
}

.svc-card-soft {
  background: linear-gradient(135deg, #edf5ff, #e0ecff);
}

.svc-card-title {
  margin: 0 0 8px;
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
}

.svc-card-list {
  margin: 0;
  padding-left: 18px;
  font-size: 13px;
  line-height: 1.6;
  color: #334155;
}

.svc-card-list li + li {
  margin-top: 4px;
}

/* =============================== ENTRY / EXIT ANIMATION ================ */
#main-content {
  opacity: 0;
  transform: translateY(8px);
  will-change: opacity, transform;
}

.svc-loaded #main-content {
  opacity: 1;
  transform: none;
  transition: opacity 0.32s ease, transform 0.32s ease;
}

#svc-exit-overlay {
  position: fixed;
  inset: 0;
  z-index: 9999;
  background: #ffffff;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.26s ease;
}

.svc-exiting #svc-exit-overlay {
  opacity: 1;
}

.svc-exiting #main-content,
.svc-exiting .container,
.svc-exiting .container-divider {
  transition: transform 0.26s ease, filter 0.26s ease, opacity 0.26s ease;
  transform: scale(0.985);
  filter: saturate(0.96) contrast(0.98);
  opacity: 0.96;
}

/* =============================== RESPONSIVE ============================ */
@media (max-width: 960px) {
  .svc-shell {
    padding: 18px 14px 22px;
  }

  .svc-topbar-inner {
    flex-direction: column;
    align-items: flex-start;
  }

  .svc-helper-row {
    flex-direction: column;
  }

  .svc-form-panel div:has(> button[type="submit"]) {
    justify-content: stretch;
  }

  .svc-form-panel button[type="submit"] {
    width: 100%;
    text-align: center;
    justify-content: center;
  }
}

@media (prefers-reduced-motion: reduce) {
  #main-content {
    opacity: 1 !important;
    transform: none !important;
    transition: none !important;
  }
  #svc-exit-overlay,
  .container,
  .container-divider {
    transition: none !important;
  }
}
</style>

<script type="module">
  import { renderServiceCatalogItem } from "service-catalog";

  const settings  = {{json settings}};
  const container = document.getElementById("service-catalog-item");

  // Extract the ID from the URL
  const id = window.location.pathname.split("/").pop();

  const props = {
    baseLocale:            {{json help_center.base_locale}},
    hasAtMentions:         {{json help_center.at_mentions_enabled}},
    userRole:              {{json user.role}},
    userId:                {{json user.id}},
    brandId:               {{json brand.id}},
    organizations:         {{json user.organizations}},
    serviceCatalogItemId:  id,
    helpCenterPath:        {{json (page_path 'help_center')}},
  };

  renderServiceCatalogItem(container, settings, props);
</script>

<script>
  (function () {
    const root = document.documentElement;
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const container = document.getElementById('service-catalog-item');

    const markLoaded = () => {
      if (prefersReduced) {
        root.classList.add('svc-loaded');
        return;
      }
      requestAnimationFrame(() =>
        requestAnimationFrame(() => {
          root.classList.add('svc-loaded');
        })
      );
    };

    if (container && container.firstElementChild) {
      markLoaded();
    } else {
      const obs = new MutationObserver(() => {
        if (container.firstElementChild) {
          obs.disconnect();
          markLoaded();
        }
      });
      obs.observe(container, { childList: true, subtree: true });
    }

    // EXIT: dissolve to white on same-tab, same-host navigation
    const mod = e => e.metaKey || e.ctrlKey || e.shiftKey || e.altKey;

    document.addEventListener('click', (e) => {
      const a = e.target.closest('a');
      if (!a) return;

      if (prefers-reduced || mod(e) || a.target === '_blank' ||
          (a.hostname && a.hostname !== location.hostname)) return;

      e.preventDefault();
      root.classList.add('svc-exiting');
      setTimeout(() => { window.location.href = a.href; }, 260);
    });
  })();
</script>
